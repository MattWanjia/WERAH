<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingBottom="10sp"
    android:paddingTop="80sp"
    android:background="@drawable/job_background3"
    tools:context="com.example.matt.werah2.SplashActivity">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:id="@+id/splashImage"
        android:src="@drawable/werah_transparent"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splashTxt"
        android:text="YOUR JOURNEY BEGINS"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#9400D3 "/>

</LinearLayout>